PORT=5000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=prompt-generator-api
JWT_AUDIENCE=prompt-generator-client

MONGODB_URI=mongodb://localhost:27017/mbotix-prompt-generator

ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password

AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint

# CORS settings - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://generateprompt.mbotix.tech,http://localhost:3000

# Notification settings
NOTIFICATIONS_ENABLED=true
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Environment setting (development, staging, production)
# Set to 'production' to remove [development] from email subjects
ENV_TYPE=development
NODE_ENV=development

# Email notification settings
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_password
EMAIL_FROM=Generate Prompt <your_email@example.com>
